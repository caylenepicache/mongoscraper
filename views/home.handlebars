<div class="container">
    <h1 id="scrapeTitle">Scraped Articles</h1>
{{#if articles}}
    {{#each articles}}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4><a href={{this.link}} target="_blank">{{this.title}}</a></h4>
        </div>
        <div class="panel-body">
            <p> {{this.syn}}</p>
            <!--<a href={{this.link}} target="_blank">{{link}}</a> -->
            <button type="button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>
        </div>
    </div>
    {{/each}}

{{else}}
<div class="panel panel-default">
    <div class="panel-body">
    <h4>Try clicking the scrape new articles button!</h4>
    </div>
    </div>
{{/if}}
</div>