
{{#if articles}}
    {{#each articles}}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>{{this.title}}</h4>
        </div>
        <div class="panel-body">
            <p> {{this.syn}}</p>
            <a href={{this.link}} target="_blank">{{link}}</a>
            <br><br>
            <button type="button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>
        </div>
    </div>
    {{/each}}

{{else}}
<div class="panel panel-default">
    <div class="panel-body">
    <h4>Uh Oh. Looks like we don't have any new articles.</h4>
    </div>
    </div>
{{/if}}

